   "source": [
    "class Solution:\n",
    "    def numberOfSteps(self, num: int) -> int:\n",
    "        a=0\n",
    "        while num>0:\n",
    "            if num%2==0:\n",
    "                a+=1\n",
    "                num=num//2\n",
    "            else:\n",
    "                a+=1\n",
    "                num=num-1\n",
    "        return(a)\n",
    "          \n",
    "\n",
    "        "
   ]
  }
